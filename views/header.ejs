<script>
    function snackbar(message) {
      var blah = $('#snackbar');
      blah.addClass('show').text(message);
      setTimeout(function(){ blah.removeClass('show') }, 3000);
    }
</script>
<% if(typeof user !== undefined) { %>
    <script src="/socket.io/socket.io.js"></script>
    <script>
      var socket = io({
        query: {
          id: '<%= user._id %>'
        }
      });
      $(function() {
        socket.on('notifications', function(obj) {
            if (obj.data.type === 'new_msg'){
                let message = `${obj.data.from}: ${obj.data.text}`;
                snackbar(message);
            }
            if (obj.data.type === 'new_request'){
                let message = `${obj.data.from} sent you a friend request`
                snackbar(message);
            }
        })
      })
     </script>
  <% } %>    
