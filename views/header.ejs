<script>
    function snackbar(message,type) {
      if (type === 'msg'){
        var blah = $('#snackbar');
        blah.addClass('show').text(message);
        setTimeout(function(){ blah.removeClass('show') }, 3000);
      }
      if (type === 'request'){
          var blah = $('#snackbar');
          blah.addClass('show').text(message);
          setTimeout(function(){blah.removeClass('show')},10000);
      }
    }
</script>
<% if(typeof user !== undefined) { %>
    <script src="/socket.io/socket.io.js"></script>
    <script>
      var socket = io({
        query: {
          id: '<%= user._id %>'
        }
      });
      $(function() {
        socket.on('notifications', function(obj) {
          console.log(obj);
          console.log(obj.type==='new_request'); 
          if (obj.type === 'new_msg'){
            let message = `${obj.data.from}: ${obj.data.text}`;
            snackbar(message,'msg');
          }
          if (obj.type === 'new_request'){
            let message = `${obj.data.from} sent you a friend request`;
            snackbar(message,'request');
          }
        })
      })
     </script>
  <% } %>    
